<h1>Belvo Demo</h1>
<div class="text-center">
  <h2>Global Balance</h2>
  <div class="row">
    <% @balances.global.each do |currency| %>
      <div class="col-sm-12 col-md-6 ">
        <h3><%= "#{currency[0]}: #{number_to_currency(currency[1])}" %></h3>
        <%= pie_chart @currencies[currency[0].to_s].last[:values] %>
      </div>
    <% end %>
  </div>
</div>
